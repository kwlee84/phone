# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /user/:id                   controllers.UserApp.user(id:Long)
GET     /user/:id/edit              controllers.UserApp.editUserForm(id:Long)
POST	/user/edit                  controllers.UserApp.editUser()
GET     /user                       controllers.UserApp.newUserForm()
POST    /user                       controllers.UserApp.newUser()
GET     /users                      controllers.UserApp.userList()

GET     /login                      controllers.UserApp.login()
GET     /logout                     controllers.UserApp.logout()